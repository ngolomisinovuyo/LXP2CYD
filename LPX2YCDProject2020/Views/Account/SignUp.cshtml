@model LPX2YCDProject2020.Models.SignUpModel
@{ Layout = null;}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Signup</title>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery-validate/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.js"></script>
    <script src="~/lib/jquery-ajax-unobtrusive/dist/jquery.unobtrusive-ajax.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
    <link href="~/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <script src="~/bootstrap/dist/js/bootstrap.min.js"></script>
    <environment include="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/jquery-validate/jquery.validate.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.js"></script>
        <script src="~/lib/jquery-ajax-unobtrusive/dist/jquery.unobtrusive-ajax.js"></script>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
        <link href="~/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
        <link href="~/lib/style.css" rel="stylesheet" />
        <link href="~/css/style-starter.css" rel="stylesheet" />
    </environment>
    <environment exclude="Development">
        <script src="~/lib/jquery/jquery.min.js"></script>
        <script src="~/lib/jquery-validate/jquery.validate.min.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
        <script src="~/lib/jquery-ajax-unobtrusive/dist/jquery.unobtrusive-ajax.min.js"></script>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous"
              asp-fallback-href="C:\Users\Athist\.nuget\packages\bootstrap\5.0.1\contentFiles\any\any\wwwroot\css\bootstrap.min.css"
              asp-fallback-test-class="sr-only"
              asp-fallback-test-property="position"
              asp-fallback-test-value="absolute" />
        <link href="~/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
        <link href="~/css/style-starter.css" rel="stylesheet" />

    </environment>

</head>
<body>
    <div class="inner-banner">
        <div class="w3l-breadcrumb">
            <div class="container">
                <h4 class="inner-text-title font-weight-bold text-white mb-sm-3 mb-2">Signup</h4>
                <ul class="breadcrumbs-custom-path">
                    <li><a asp-controller="Home" asp-action="Home">Home</a></li>
                    <li class="active">
                        <span class="fa fa-chevron-right mx-2" aria-hidden="true"></span>Sign up
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <div class="container py-md-5 py-4 justify-content-center">
        <div class="title-heading-w3 text-center mx-auto mb-5 pb-sm-4">
            <h3 class="title-main"><span>Sign up</span></h3>
        </div>
        <span class="text-danger">All fields are required</span>
        <form asp-action="SignUp" asp-controller="Account">

            <input value="@DateTime.Today.ToShortDateString()" asp-for="DateJoined" hidden />

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <div>
                    <label asp-for="FirstName" class="control-label"></label>
                </div>
                <div>
                    <input type="text" asp-for="FirstName" class="form-control" />
                </div>
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <div>
                    <label asp-for="LastName" class="form-label"></label>
                </div>
                <div>
                    <input type="text" asp-for="LastName" class="form-control" />
                </div>
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>



            <div class="form-group">
                <div>
                    <label asp-for="Email" class="form-label"></label>
                </div>
                <div>
                    <input type="email" asp-for="Email" class="form-control" />
                </div>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">

            </div>

            <div class="form-group">
                <div>
                    <label asp-for="Password" class="form-label"></label>
                </div>
                <div>
                    <input type="password" asp-for="Password" class="form-control" />
                </div>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <div>
                    <label asp-for="ConfirmPassword" class="form-label"></label>
                </div>
                <div>
                    <input type="password" asp-for="ConfirmPassword" class="form-control" />
                </div>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <br />
            <div>
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
        <p> Click <a asp-action="Login" asp-controller="Account">here</a> to login</p>
    </div>


    <partial name="_footer" />
    <environment include="Development">
        <script src="~/lib/jquery/jquery.js"></script>
        <script src="~/lib/jquery-validate/jquery.validate.js"></script>
        <script src="~/lib/jquery-ajax-unobtrusive/dist/jquery.unobtrusive-ajax.js"></script>

        <link href="~/lib/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />
    </environment>
    <environment exclude="Development">
        <script src="~/lib/jquery/jquery.min.js"></script>
        <script src="~/lib/jquery-ajax-unobtrusive/dist/jquery.unobtrusive-ajax.min.js"></script>
        <script src="~/lib/jquery-validate/jquery.validate.min.js"></script>
    </environment>
</body>
</html>


