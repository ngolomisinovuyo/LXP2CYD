@model LPX2YCDProject2020.Models.PasswordResetModel.ForgotPasswordModel
@{
    ViewData["Title"] = "UserForgotPassword";
    Layout = "~/Views/Shared/_userDashboard.cshtml";
}

<div class="row">
    <div class="col-md-4 offset-4">

        <h3>Forgot password?</h3>
        <hr />

        @if (Model?.EmailSent == true)
        {
            <div class="alert alert-success" role="alert">
                <p>
                    An email has been sent to the email address associated with this accout.
                </p>
            </div>
        }
        else
        {
            <p>If you have forgotten your password, reset it here..</p>
            <form asp-action="UserForgotPassword">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <input type="submit" value="Reset password" class="btn btn-primary" />
                </div>

            </form>
        }
    </div>
</div>
