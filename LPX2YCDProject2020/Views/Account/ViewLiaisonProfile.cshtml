            </div>
            <div class="media-body">
                <h4 class="m-0">@User.FindFirst("UserFirstName").Value @User.FindFirst("UserLastName").Value</h4>
                <p class=" font-weight-normal text-muted mb-0"> @User.FindFirst("EmailAddr").Value</p>

              
                    <p class=" font-weight-normal text-muted mb-0">Gender:.@Model?.Management.Gender </p>
                    <p class=" font-weight-normal text-muted mb-0">Date of birth: @Model?.Management.DateOfBirth</p>
