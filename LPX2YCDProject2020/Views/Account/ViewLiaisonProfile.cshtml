                    <hr />
             
            </div>
        </div>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Management.AddressLine1)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Management.AddressLine1)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Management.AddressLine2)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Management.AddressLine2)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Management.SuburbId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Management.SuburbId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Management.CityId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Management.CityId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Management.Occupation)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Management.Occupation)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Management.PhoneNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Management.PhoneNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Management.OfficeNumber)
        </dt>
        <dd class="col-sm-10">
