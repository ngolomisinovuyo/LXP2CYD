@model LPX2YCDProject2020.Models.Account.ProLiaisonProfileViewModel
@inject Microsoft.AspNetCore.Identity.SignInManager<ApplicationUser> _signInManager
@{
    ViewData["Title"] = "ViewLiaisonProfile";
    Layout = "~/Views/Shared/_ProvincialLiaisonMenu.cshtml";
}

<h1>ViewLiaisonProfile</h1>

<div>
    <h4>ExternalManagement</h4>
    <hr />

    <dl class="row">

        <div class="py-4 px-3 mb-4 bg-light">
            <div class="media d-flex align-items-center ">
