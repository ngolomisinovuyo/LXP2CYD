@model LPX2YCDProject2020.Models.AddressModels.Province

@{
    ViewData["Title"] = "Provinces";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h1>Add a province</h1>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="AddProvinces">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
                <div class="form-group">
                    <label asp-for="ProvinceName" class="control-label"></label>
                    <input asp-for="ProvinceName" class="form-control" />
                    <span asp-validation-for="ProvinceName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Country"  class="control-label"></label>
                    <input asp-for="Country" value="South Africa" disabled placeholder="South Africa" class="form-control" />
                    <span asp-validation-for="Country" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="ViewProvinces">View All</a>
    </div>
</div>

