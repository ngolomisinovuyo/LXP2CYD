@model LPX2YCDProject2020.Models.AddressModels.Suburb

@{
    ViewData["Title"] = "Suburb";
    Layout = "~/Views/Shared/_UserAdminLayout.cshtml";

}

<div class="container">
    <h4>Edit suburb</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="EditSuburb">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="SuburbId" />
                <input hidden asp-for="CityId" />
                <div class="form-group">
                    <label asp-for="SuburbName" class="control-label"></label>
                    <input asp-for="SuburbName" class="form-control" />
                    <span asp-validation-for="SuburbName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PostalCode" class="control-label"></label>
                    <input asp-for="PostalCode" class="form-control" />
                    <span asp-validation-for="PostalCode" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="ViewProvinces">Back to provinces</a>
    </div>

</div>