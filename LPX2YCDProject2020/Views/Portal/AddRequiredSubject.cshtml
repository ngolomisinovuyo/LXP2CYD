@model LPX2YCDProject2020.Models.PortalModels.RequiredSubjects

@{
    ViewData["Title"] = "AddRequiredSubject";
    Layout = "~/Views/Shared/_UserAdminLayout.cshtml";
}

<h4>RequiredSubject</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddRequiredSubject">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input hidden asp-for="BursaryId" />
            <input hidden asp-for="Id" value="0" />

            <div class="form-group">
                <label asp-for="SubjectId" class="control-label"></label>
                <select asp-for="SubjectId" class ="form-control" asp-items=" ViewBag.Subject ">
                    <option>--Select subject--</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Percentage" class="control-label"></label>
                <input asp-for="Percentage" class="form-control" />
                <span asp-validation-for="Percentage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ListBursaries">Back to List</a>
</div>

