@model IEnumerable<LPX2YCDProject2020.Models.PortalModels.Bursary>

@{
    ViewData["Title"] = "ShowAllBursaries";
    Layout = "~/Views/Shared/_userDashboard.cshtml";
}

<div class="container-fluid h-100">
    <div class="title-heading-w3 text-center mx-auto mb-5 pb-sm-4">
        <h3 class="title-main"> <span>Bursaries</span></h3>
    </div>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.openingDate)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.openingDate)
                    </td>
                    <td>
                        |<a asp-action="BursaryDetails" asp-route-id="@item.Id">Details</a> |
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>